{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "src/**/*",
    ]
}